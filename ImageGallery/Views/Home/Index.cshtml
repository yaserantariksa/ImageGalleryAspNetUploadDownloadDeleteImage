@{
    ViewData["Title"] = "Home Page";
}

@model List<string>

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about building Gallery Web apps with ASP.NET Core.</p>
    </div>

    @using(Html.BeginForm("Index", "Home", FormMethod.Post, new {enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="form-group">
                <input type="file" class="form-control" name="imageFile"/>
            </div>
            <div class="form-group my-2">
                <input class="form-control btn btn-success" type="submit" value="Upload" name="filesubmit"/>
            </div>
        </div>
    }

    <div class="row">
        @foreach(var imagePath in Model)
        {
            <div class="col-md-4 p-4 rounded">
                <div class="ratio ratio-16x9 mb-1">
                    <img class="img-fluid h-100 object-fit-cover rounded" src="~/images/@imagePath" alt="Uploaded Image" />                    
                </div>
                <a class="btn btn-primary" href="/Home/DownloadImage/?imagePath=@imagePath">Download</a>
                <a class="btn btn-danger" href="/Home/DeleteImage/?imagePath=@imagePath">Delete</a>
                

            </div>
        }
    </div>
</div>

